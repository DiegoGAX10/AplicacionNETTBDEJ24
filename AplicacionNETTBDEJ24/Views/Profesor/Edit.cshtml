@model AplicacionNETTBDEJ24.Models.Profesor

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Profesor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="nuprof" />
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sueldo" class="control-label"></label>
                <input asp-for="sueldo" class="form-control" />
                <span asp-validation-for="sueldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="grado" class="control-label"></label>
                <input asp-for="grado" class="form-control" />
                <span asp-validation-for="grado" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
