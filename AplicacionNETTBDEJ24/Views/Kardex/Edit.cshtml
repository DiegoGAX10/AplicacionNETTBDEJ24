@model AplicacionNETTBDEJ24.Models.Kardex

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Kardex</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nualu" class="control-label"></label>
                <input asp-for="nualu" class="form-control" />
                <span asp-validation-for="nualu" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="nualu" />
            <div class="form-group">
                <label asp-for="numat" class="control-label"></label>
                <input asp-for="numat" class="form-control" />
                <span asp-validation-for="numat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="calif" class="control-label"></label>
                <input asp-for="calif" class="form-control" />
                <span asp-validation-for="calif" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
